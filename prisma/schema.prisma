generator client {
  provider = "prisma-client-js"
 
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ClerkUser {
  id             String   @id @default(cuid())
  clerkId        String   @unique        // Clerk's user ID
  email          String   @unique
  name           String?
  imageUrl       String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  addresses Address[]  
  cartItems     CartItem[] @relation("UserCartItems")

  @@map("clerk_users")
}

model CartItem {
  id        String     @id @default(cuid())
  userId    String
  user      ClerkUser  @relation("UserCartItems", fields: [userId], references: [id])
  productId String
  quantity  Int        @default(1)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@map("cart_items")
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String
  category    String
  price       Float
  images      String[] // Array of image URLs
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Address {
  id          String    @id @default(cuid())
  userId      String
  user        ClerkUser @relation(fields: [userId], references: [id])
  fullName    String
  phoneNumber String
  pincode     String
  area        String
  city        String
  state       String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("addresses")
}
